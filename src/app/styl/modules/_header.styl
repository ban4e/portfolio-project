.header
	height 600px
.header__bg
	position relative
	height 600px
	//background-image url('../img/content/night.jpg')
	background-color mainBgc
	background-repeat no-repeat
	background-size auto 100%
	background-position center -80px
	padding 0 10px
.header__bg_wrap
	display flex
	align-items center
	padding 28px 20px
	justify-content space-between
.hero__bg-img
	max-width 100%	
.socials
	display flex
	justify-content space-between
	align-items center
	width 140px
	//padding 30px 20px
.socials__icon
	fill white
.icon-vk
	width 31px
	height 17px
.icon-github
	width 26px
	height 22px
.icon-in
	width 24px
	height 22px
.hamburger
	margin-bottom -10px
.hamburger__line
	position relative
	width 40px
	height 5px
	display block
	background-color #fff
	margin-bottom 10px
.author
	position absolute
	top 50%
	width 100%
	text-align center
	transform translateY(-50%)
	display flex
	flex-direction column
	align-items center
	color white
.author__img
	border-radius 50%
	width 140px
	height 140px
	margin-bottom 30px
.author__name
	font-family 'Comical', sans-serif
	font-size 35px
	font-weight 500
.author__desc
	font-family 'Comical', sans-serif
	font-size 18px
.triangle
	position absolute
	bottom 0
	width 50%
	height calc(50vw * 0.15)
	fill white
.triangle_left
	left 0
	fill leftPart
.triangle_right
	right 0
